<resources>

    <style name="AuditorTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarStyle">@style/AuditorActionBar</item>
        <item name="actionBarTabTextStyle">@style/AuditorActionBarTabText</item>
        <item name="actionMenuTextColor">@color/White</item>

        <item name="android:actionBarStyle">@style/AuditorActionBar</item>
        <item name="android:actionBarTabTextStyle">@style/AuditorActionBarTabText</item>
        <item name="android:actionMenuTextColor">@color/White</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/AuditorColorPrimaryDark</item>
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/AuditorColorPrimary</item>
        <!-- colorAccent is used as the default value for colorControlActivated,
        which is used to tint widgets -->
        <item name="colorAccent">@color/AuditorColorAccent</item>
    </style>

    <!-- ActionBar styles -->
    <style name="AuditorActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="background">@color/AuditorColorPrimary</item>
    </style>

    <!-- ActionBar tab text -->
    <style name="AuditorActionBarTabText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/White</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

</resources>